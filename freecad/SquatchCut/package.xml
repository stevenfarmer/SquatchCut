  <url type="bugtracker">https://github.com/stevenfarmer/SquatchCut/issues</url>
  <url type="documentation">https://stevenfarmer.github.io/SquatchCut/</url>

  <version>0.1.0</version>
  <license>MIT</license>

  <tagline>Cryptid-powered sheet nesting for wood nerds.</tagline>
  <icon>resources/icons/squatchcut.svg</icon>

  <freecad>
    <version_min>0.21</version_min>
  </freecad>

  <content>
    <workbench>SquatchCut</workbench>
  </content>

