{
  "name": "squatchcut-ts-tools",
  "version": "0.1.0",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "swc src -d dist",
    "dev": "swc src -d dist --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate:csv": "node dist/cli.js",
    "e2e": "node tests/e2e_cli_smoke.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.7.22",
    "typescript": "^5.6.3",
    "eslint": "^9.10.0",
    "prettier": "^3.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "bin": {
    "squatchcut-csv": "dist/cli.js"
  }
}
